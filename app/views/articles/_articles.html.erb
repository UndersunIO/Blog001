<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Informations</th>
      <th>Actions</th>
    </tr>
  </thead>

  
    <% obj.each do |article| %>
      <tr>
        <td><%= link_to article.title, article_path(article) %></td>
        <td><%= truncate(article.description, length: 60) %></td>
        <td><small> Crée par <strong> <%= article.user.username if article.user %></strong> depuis
          <%= time_ago_in_words(article.created_at) %> Dernière mise à jour : <%= time_ago_in_words(article.updated_at)%> </td>
        <td><%= link_to 'Edit', edit_article_path(article), class:"btn btn-xs btn-danger" %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  
</table>